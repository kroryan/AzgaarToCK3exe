<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GraphicalUI.CreateNewModPage"
             Title="CreateNewModPage">
    <VerticalStackLayout>
        <Entry x:Name="modNameEntry" Placeholder="Mod Name to Create..." />
        <HorizontalStackLayout>
            <Button x:Name="applyButton" Text="Apply" Clicked="applyButton_Clicked" Margin="10,0" MaximumWidthRequest="100" />
            <Button x:Name="cancelButton" Text="Cancel" Clicked="cancelButton_Clicked" Margin="10,0" MaximumWidthRequest="100" />
        </HorizontalStackLayout>
    </VerticalStackLayout>
</ContentPage>